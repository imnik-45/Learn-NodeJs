<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>


    <%- include('./partials/nav.ejs') %>



    <div class="blog-content">
        <h2>All Blogs</h2>

        <% if(blogs.length > 0){ %>

        <% blogs.forEach(blog => { %>
        <div class="post">
            <h2 class="title"><%= blog.title %></h2>
            <p class="snippet"><%= blog.snippet %></p>
        </div>

        <%}) %>

        <% } else { %>

        <p>No blogs Available...... </p>

        <%}%>
        

    </div>

    <%- include('./partials/footer.ejs') %>

</body>

</html>